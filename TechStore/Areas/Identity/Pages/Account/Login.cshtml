@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<section class="auth">
    <div class="auth__card">

        <header class="auth__header">
            <h1 class="auth__title">@ViewData["Title"]</h1>
            <p class="auth__subtitle">Use your account to log in.</p>
        </header>

        <form id="account" method="post" class="auth__form">

            <div asp-validation-summary="ModelOnly" class="auth__error" role="alert"></div>

            <div class="field">
                <label class="field__label" asp-for="Input.Email">Email</label>
                <input class="field__input"
                       asp-for="Input.Email"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="name@example.com" />
                <span class="field__error" asp-validation-for="Input.Email"></span>
            </div>

            <div class="field">
                <label class="field__label" asp-for="Input.Password">Password</label>

                <div class="field__password">
                    <input class="field__input"
                           asp-for="Input.Password"
                           autocomplete="current-password"
                           aria-required="true"
                           placeholder="Password"
                           type="password" />

                    <button type="button"
                            class="field__toggle"
                            data-password-toggle
                            aria-label="Show password">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>

                <span class="field__error" asp-validation-for="Input.Password"></span>
            </div>

            <div class="field field--checkbox">
                <label class="field__checkbox">
                    <input asp-for="Input.RememberMe" />
                    <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                </label>
            </div>

            <button id="login-submit" type="submit" class="auth__btn">
                Login
            </button>

            <div class="auth__links">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                    Register as a new user
                </a>
            </div>

        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/auth.css" asp-append-version="true" />
}
