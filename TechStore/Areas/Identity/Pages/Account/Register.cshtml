@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="auth">
    <div class="auth__card">
        <header class="auth__header">
            <h1 class="auth__title">@ViewData["Title"]</h1>
            <p class="auth__subtitle">Create a new account.</p>
        </header>

        <form class="auth__form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="auth__error" role="alert"></div>

            <div class="field">
                <label class="field__label" asp-for="Input.Email">Email</label>
                <input class="field__input"
                       asp-for="Input.Email"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="name@example.com" />
                <span class="field__error" asp-validation-for="Input.Email"></span>
            </div>

            <div class="field">
                <label class="field__label" asp-for="Input.Password">Password</label>

                <div class="field__password">
                    <input class="field__input"
                           asp-for="Input.Password"
                           autocomplete="new-password"
                           aria-required="true"
                           placeholder="Password"
                           type="password" />

                    <button type="button"
                            class="field__toggle"
                            data-password-toggle
                            aria-label="Show password">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>

                <span class="field__error" asp-validation-for="Input.Password"></span>
            </div>


            <div class="field">
                <label class="field__label" asp-for="Input.ConfirmPassword">Confirm password</label>

                <div class="field__password">
                    <input class="field__input"
                           asp-for="Input.ConfirmPassword"
                           autocomplete="new-password"
                           aria-required="true"
                           placeholder="Confirm password"
                           type="password" />

                    <button type="button"
                            class="field__toggle"
                            data-password-toggle
                            aria-label="Show password">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>

                <span class="field__error" asp-validation-for="Input.ConfirmPassword"></span>
            </div>


            <button id="registerSubmit" type="submit" class="auth__btn">
                Register
            </button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/register.css" asp-append-version="true" />
}