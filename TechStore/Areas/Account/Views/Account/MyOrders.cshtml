@using TechStore.Web.ViewModels.Order
@model MyOrdersViewModel

@{
    ViewData["Title"] = "My orders";
}

<section class="orders">
    <header class="orders__header">
        <h2 class="orders__title">@ViewData["Title"]</h2>
    </header>

    @if (Model.Orders == null || !Model.Orders.Any())
    {
        <div class="notice notice--info" role="status">
            You don’t have any orders yet.
        </div>
    }
    else
    {
        <div class="orders__list">
            @foreach (var order in Model.Orders)
            {
                var detailsDomId = $"order_{order.Id}_details";
                var btnDomId = $"order_{order.Id}_btn";

                <article class="orderCard">
                    <div class="orderCard__body">
                        <h5 class="orderCard__title">Order #@order.Id</h5>

                        <div class="orderCard__meta">
                            <div class="orderCard__metaRow">
                                <i class="bi bi-calendar3" aria-hidden="true"></i>
                                <span>@order.Date</span>
                            </div>
                            <div class="orderCard__metaRow">
                                <i class="bi bi-info-circle" aria-hidden="true"></i>
                                <span>@order.Status</span>
                            </div>
                        </div>

                        <div class="orderCard__summary">
                            <div class="orderCard__total">
                                <span class="orderCard__label">Total:</span>
                                <span class="orderCard__value">@order.TotalSum €</span>
                            </div>

                            <button id="@btnDomId"
                                    class="btn btn--info btn--sm orderCard__toggle"
                                    type="button"
                                    aria-expanded="false"
                                    aria-controls="@detailsDomId"
                                    data-target="#@detailsDomId">
                                <span class="orderCard__toggleText">Show details</span>
                            </button>
                        </div>

                        <div class="orderDetails" id="@detailsDomId" hidden>
                            <hr class="orderDetails__divider" />

                            <div class="orderDetails__grid">
                                <div class="orderDetails__col">
                                    <div class="orderDetails__hint">Recipient</div>
                                    <div class="orderDetails__text">@order.RecipientName</div>

                                    <div class="orderDetails__hint">Address</div>
                                    <div class="orderDetails__text">@order.ShippingAddress</div>

                                    <div class="orderDetails__hint">Phone</div>
                                    <div class="orderDetails__text">@order.PhoneNumber</div>
                                </div>

                                <div class="orderDetails__col">
                                    <div class="orderDetails__hint">Payment method</div>
                                    <div class="orderDetails__text">@order.PaymentMethod</div>

                                    <div class="orderDetails__hint">Email</div>
                                    <div class="orderDetails__text">@order.Email</div>
                                </div>
                            </div>

                            <div class="orderDetails__itemsTitle">Items</div>

                            <div class="orderItems">
                                @foreach (var p in order.Products)
                                {
                                    <div class="orderItem">
                                        <div class="orderItem__row">
                                            <div class="orderItem__thumb">
                                                @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
                                                {
                                                    <img src="@p.ImageUrl" alt="@p.ProductName" />
                                                }
                                                else
                                                {
                                                    <img src="~/images/default-image.jpg" alt="No Image Available" />
                                                }
                                            </div>

                                            <div class="orderItem__content">
                                                <div class="orderItem__name">@p.ProductName</div>

                                                @if (!string.IsNullOrWhiteSpace(p.Description))
                                                {
                                                    <div class="orderItem__desc">@p.Description</div>
                                                }

                                                <div class="orderItem__badges">
                                                    <span class="badge">
                                                        Qty: <span class="badge__value">@p.Quantity</span>
                                                    </span>
                                                    <span class="badge">
                                                        Unit price: <span class="badge__value">@p.Price €</span>
                                                    </span>
                                                    <span class="badge">
                                                        Total: <span class="badge__value">@p.TotalSum €</span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </article>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="pagination" aria-label="Orders pagination">
                <a class="pagination__link"
                   aria-disabled="@(Model.HasPreviousPage ? "false" : "true")"
                   tabindex="@(Model.HasPreviousPage ? "0" : "-1")"
                   asp-area="Account"
                   asp-controller="Account"
                   asp-action="MyOrders"
                   asp-route-page="@(Model.CurrentPage - 1)">
                    Previous
                </a>

                <div class="pagination__pages">
                    @for (int p = 1; p <= Model.TotalPages; p++)
                    {
                        <a class="pagination__link @(p == Model.CurrentPage ? "pagination__link--active" : "")"
                           aria-current="@(p == Model.CurrentPage ? "page" : null)"
                           asp-area="Account"
                           asp-controller="Account"
                           asp-action="MyOrders"
                           asp-route-page="@p">
                            @p
                        </a>
                    }
                </div>

                <a class="pagination__link"
                   aria-disabled="@(Model.HasNextPage ? "false" : "true")"
                   tabindex="@(Model.HasNextPage ? "0" : "-1")"
                   asp-area="Account"
                   asp-controller="Account"
                   asp-action="MyOrders"
                   asp-route-page="@(Model.CurrentPage + 1)">
                    Next
                </a>
            </nav>
        }
    }
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/pages/my-orders.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/my-orders.js" asp-append-version="true"></script>
}
