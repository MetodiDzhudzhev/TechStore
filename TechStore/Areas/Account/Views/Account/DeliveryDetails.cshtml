@using TechStore.Web.ViewModels.User
@model DeliveryDetailsViewModel

@{
    ViewData["Title"] = "Delivery details";
}

<section class="delivery">
    <div class="delivery__card">

        <header class="delivery__header">
            <h2 class="delivery__title">Delivery details</h2>

            <button type="button"
                    class="btn btn--outline btn--lg"
                    id="editBtn">
                Edit
            </button>
        </header>

        <p class="delivery__subtitle">
            Update your default delivery details. You can also enter delivery details manually during checkout.
        </p>

        <form asp-area="Account"
              asp-controller="Account"
              asp-action="DeliveryDetails"
              method="post"
              id="deliveryForm"
              class="deliveryForm"
              novalidate>

            @Html.AntiForgeryToken()

            <div class="field">
                <label asp-for="FullName" class="field__label"></label>
                <input asp-for="FullName"
                       class="field__input editable"
                       readonly
                       placeholder="Not specified" />
                <span asp-validation-for="FullName" class="field__error"></span>
            </div>

            <div class="field">
                <label asp-for="Address" class="field__label"></label>
                <input asp-for="Address"
                       class="field__input editable"
                       readonly
                       placeholder="Not specified" />
                <span asp-validation-for="Address" class="field__error"></span>
            </div>

            <div class="field field--last">
                <label asp-for="PhoneNumber" class="field__label"></label>
                <input asp-for="PhoneNumber"
                       class="field__input editable"
                       readonly
                       placeholder="Not specified" />
                <span asp-validation-for="PhoneNumber" class="field__error"></span>
            </div>

            <div class="deliveryForm__actions">

                <button type="button"
                        class="btn btn--outline btn--lg"
                        id="cancelBtn"
                        hidden>
                    Cancel
                </button>

                <button type="submit"
                        class="btn btn--primary btn--lg"
                        id="saveBtn"
                        hidden>
                    Save
                </button>
            </div>

        </form>

    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/pages/delivery-details.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/delivery-details.js" asp-append-version="true"></script>
}
