@using TechStore.Web.ViewModels.Brand
@model DeleteBrandViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-light text-dark shadow-lg p-4 rounded">
                <div class="row">
                    <div class="col-md-4 d-flex align-items-center justify-content-center">
                        <img src="@(Model.LogoUrl ?? Url.Content("~/images/default-image.jpg"))"
                             alt="@Model.Name"
                             class="img-fluid rounded shadow"
                             style="max-height: 200px; object-fit: contain;" />
                    </div>

                    <div class="col-md-8">
                        <h3 class="fw-bold mb-3">@Model.Name</h3>

                        <p class="fs-5">
                            Are you sure you want to delete this brand?
                        </p>

                        @if (!string.IsNullOrWhiteSpace(Model.Description))
                        {
                            <div class="mb-3 text-muted">
                                <strong>Description:</strong>
                                <p>@Model.Description</p>
                            </div>
                        }

                        <form asp-area="ControlPanel"
                              asp-controller="ControlPanelBrand"
                              asp-action="Delete"
                              method="post">

                              @Html.AntiForgeryToken()

                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Name" />
                            <input type="hidden" asp-for="LogoUrl" />
                            <input type="hidden" asp-for="Description" />

                            <div class="d-flex gap-2 mt-4">
                                <button type="submit" class="btn btn-danger fw-bold px-4 rounded-pill">
                                    <i class="fas fa-trash-alt"></i> Confirm
                                </button>

                                <a asp-area="ControlPanel"
                                   asp-controller="ControlPanelBrand"
                                   asp-action="Manage"
                                   class="btn btn-outline-secondary fw-bold px-4 rounded-pill">
                                    <i class="fas fa-arrow-left"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
