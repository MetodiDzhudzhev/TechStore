@using TechStore.Web.ViewModels.Brand
@model BrandManageListViewModel

@* TODO: Better pagination. Implement AJAX for inline editing *@

@{
    ViewData["Title"] = "Manage Brands";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Manage Brands</h2>
    <a asp-action="Add" class="btn btn-sm btn-primary">
        <i class="fas fa-plus"></i> Add Brand
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover table-striped table-bordered mb-0" style="font-size: 1rem;">
            <thead class="table-dark">
                <tr>
                    <th style="vertical-align: middle;">Name</th>
                    <th style="vertical-align: middle;">Logo</th>
                    <th style="vertical-align: middle;">Description</th>
                    <th style="vertical-align: middle;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var brand in Model.Brands)
                {
                    <tr style="height: 140px;">
                        <td class="align-middle">@brand.Name</td>
                        <td class="align-middle">
                            <img src="@brand.LogoUrl" alt="@brand.Name"
                                 width="150" height="100"
                                 class="rounded border border-secondary" />
                        </td>
                        <td class="align-middle">@brand.Description</td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@brand.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Manage" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Manage" asp-route-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Manage" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
