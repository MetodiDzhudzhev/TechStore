@using TechStore.Web.ViewModels.User
@model UserManageListViewModel
@{
    ViewData["Title"] = "Manage Users";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Manage Users</h2>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover table-striped table-bordered mb-0" style="font-size: 1rem;">
            <thead class="table-dark">
                <tr>
                    <th style="vertical-align: middle;">Email</th>
                    <th style="vertical-align: middle;">Full Name</th>
                    <th style="vertical-align: middle;">Current Role</th>
                    <th style="vertical-align: middle;">Change Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td class="align-middle">@user.Email</td>
                        <td class="align-middle">@user.FullName</td>
                        <td class="align-middle">
                            @string.Join(", ", user.Roles)
                        </td>
                        <td class="align-middle">
                            <form asp-action="AssignRole" method="post" class="d-flex align-items-center">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <input type="hidden" name="currentPage" value="@Model.CurrentPage" />
                                <select name="selectedRole" class="form-select form-select-sm me-2" required>
                                    <option disabled selected>-- Select Role --</option>
                                    @foreach (var role in Model.AllRoles)
                                    {
                                        <option value="@role">@role</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-sm btn-outline-success">Apply</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Manage" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Manage" asp-route-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Manage" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}
