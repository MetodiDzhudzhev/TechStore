@using TechStore.Web.ViewModels.Category
@model CategoryFormInputViewModel

<h2>Restore Category</h2>

<p>
    A category with the name <strong>@Model.Name</strong> already exists, but it is deactivated.
    Do you want to restore it?
</p>

<img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 150px;" />

<form asp-area="ControlPanel"
      asp-controller="ControlPanelCategory"
      asp-action="RestoreConfirmed"
      method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-success">Yes, restore</button>
    <a asp-area="ControlPanel"
       asp-controller="ControlPanelCategory"
       asp-action="Add"
       class="btn btn-secondary">Cancel</a>
</form>
