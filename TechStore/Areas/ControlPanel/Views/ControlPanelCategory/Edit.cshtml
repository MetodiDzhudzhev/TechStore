@using TechStore.Web.ViewModels.Category
@model CategoryFormInputViewModel

@{
    ViewData["Title"] = "Edit Category";
}

<h2 class="mt-4 mb-3 text-center">Edit Category</h2>

<form asp-area="ControlPanel"
      asp-controller="ControlPanelCategory"
      asp-action="Edit"
      method="post"
      class="col-md-6 offset-md-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label> 
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="ImageUrl" class="form-label">Image URL (optional)</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between gap-2">
        <a asp-area=""
           asp-controller="Category"
           asp-action="Index"
           class="btn btn-secondary w-50">
            <i class="bi bi-arrow-left-circle"></i> Back to Categories
        </a>

        <button type="submit" class="btn btn-primary w-50">
            <i class="bi bi-save"></i> Save Changes
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
