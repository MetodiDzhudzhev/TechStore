@using TechStore.Web.ViewModels.Category
@model CategoryManageListViewModel

@* TODO: Better pagination. Implement AJAX for inline editing *@

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Manage Categories</h2>
    <a asp-action="Add" class="btn btn-sm btn-primary">
        <i class="fas fa-plus"></i> Add category
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover table-striped table-bordered mb-0" style="font-size: 1rem;">
            <thead class="table-dark">
                <tr>
                    <th style="vertical-align: middle;">Name</th>
                    <th style="vertical-align: middle;">Image</th>
                    <th style="vertical-align: middle;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr style="height: 140px;">
                        <td class="align-middle">@category.Name</td>
                        <td class="align-middle">
                            <img src="@category.ImageUrl" alt="@category.Name"
                                 width="150" height="100"
                                 class="rounded border border-secondary" />
                        </td>
                        <td class="align-middle">
                            <a asp-action="Edit" asp-route-categoryId="@category.Id" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Manage" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Manage" asp-route-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Manage" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}
