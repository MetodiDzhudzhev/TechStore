@using TechStore.Web.ViewModels.Product
@model ProductFormInputModel

<h2>Restore Product</h2>

<p>
    A product with the name <strong>@Model.Name</strong> already exists, but it is deactivated.
    Do you want to restore it?
</p>

<img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 150px;" />

<form asp-action="RestoreConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-success">Yes, restore</button>
    <a asp-action="Add" class="btn btn-secondary">Cancel</a>
</form>
