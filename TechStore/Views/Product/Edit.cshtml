@using TechStore.Web.ViewModels.Product
@model ProductFormInputModel

@{
    ViewData["Title"] = "Edit Product";
}

<h2 class="text-center mb-4">Edit Product</h2>

<form asp-action="Edit" method="post" class="mx-auto" style="max-width: 600px;">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" rows="4"></>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="QuantityInStock" class="form-label"></label>
        <input asp-for="QuantityInStock" class="form-control" />
        <span asp-validation-for="QuantityInStock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-select"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BrandId" class="form-label">Brand</label>
        <select asp-for="BrandId" asp-items="@(new SelectList(Model.Brands, "Id", "Name"))" class="form-select"></select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between gap-2">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary w-50">
            <i class="bi bi-arrow-left-circle"></i> Back to Details
        </a>

        <button type="submit" class="btn btn-primary w-50">
            <i class="bi bi-save2"></i> Save Changes
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
