@using TechStore.Web.ViewModels.Category
@model IEnumerable<AllCategoriesIndexViewModel>

@{
	ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
	<h2>@ViewData["Title"]</h2>
	@if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Manager") || User.IsInRole("Admin")))
	{
		<a asp-area="ControlPanel" asp-controller="ControlPanelCategory" asp-action="Add" class="btn btn-primary">
			<i class="fas fa-plus"></i> Add category
		</a>
	}
</div>
<hr />

<div class="row text-center">
	@foreach (var category in Model)
	{
		<div class="col-md-3 mb-4">
			<div class="card h-100" style="width: 100%;">
				@if (!string.IsNullOrEmpty(category.ImageUrl))
				{
					<img src="@category.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@category.Name">
				}
				else
				{
					<img src="~/images/default-image.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
				}

				<div class="card-body d-flex flex-column">
					<h5 class="card-title" style="color: black;">@category.Name</h5>
					<div class="d-flex gap-2 mt-auto flex-wrap">
						<a asp-controller="Product"
						asp-action="IndexByCategory"
						asp-route-categoryId="@category.Id"
						class="btn btn-info w-100">
							<i class="fas fa-search"></i> Explore
						</a>

						@if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Manager") || User.IsInRole("Admin")))
						{
							<a asp-area="ControlPanel" asp-controller="ControlPanelCategory" asp-action="Edit" asp-route-categoryId="@category.Id" class="btn btn-warning w-100">
								<i class="fas fa-edit"></i> Edit
							</a>


							<a asp-area="ControlPanel" asp-controller="ControlPanelCategory" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger w-100">
								<i class="fas fa-trash-alt"></i> Delete
							</a>
						}
					</div>
				</div>
			</div>
		</div>
	}
</div>
