@using TechStore.Web.ViewModels.Category
@model CategoryFormInputViewModel

@{
    ViewData["Title"] = "Add Category";
}

<h2 class="mt-4 mb-3 text-center">Add New Category</h2>

<form asp-action="Add" method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ImageUrl" class="form-label">Image URL (optional)</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Add Category</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
