<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechStore.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        .navbar-dark-theme {
            background-color: #1c1c1e;
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

            .navbar-dark-theme .nav-link,
            .navbar-dark-theme .navbar-brand,
            .navbar-dark-theme .dropdown-toggle,
            .navbar-dark-theme .form-control {
                color: #f0f0f0 !important;
            }

            .navbar-dark-theme .dropdown-menu {
                background-color: #2c2c2e;
                border-color: #444;
            }

            .navbar-dark-theme .dropdown-item {
                color: #f0f0f0;
            }

                .navbar-dark-theme .dropdown-item:hover {
                    background-color: #3a3a3c;
                }

            .navbar-dark-theme .form-control {
                background-color: #2c2c2e;
                border: 1px solid #444;
            }

            .navbar-dark-theme .btn-outline-secondary {
                border-color: #666;
                color: #f0f0f0;
            }

                .navbar-dark-theme .btn-outline-secondary:hover {
                    background-color: #444;
                    color: white;
                }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        body {
            background-color: #121212;
            color: #f0f0f0;
        }

        footer {
            background-color: #1c1c1e;
            color: #aaa;
            padding: 1rem 0;
            margin-top: 4rem;
            text-align: center;
        }

        .navbar-nav .nav-item .form-control {
            max-width: 200px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark-theme border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cpu"></i> TechStore
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto align-items-center">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown">
                                Categories
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/Products?category=Laptops">
                                        <i class="bi bi-laptop me-2"></i> Laptops
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/Products?category=Smartphones">
                                        <i class="bi bi-phone me-2"></i> Smartphones
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/Products?category=Headphones">
                                        <i class="bi bi-tv me-2"></i> TV
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/Products?category=Accessories">
                                        <i class="bi bi-keyboard me-2"></i> PC periphery
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item ms-3">
                            <form class="d-flex" asp-controller="Products" asp-action="Search" method="get">
                                <input class="form-control me-2" type="search" placeholder="Search..." name="query" />
                                <button class="btn btn-outline-secondary" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </form>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        &copy; 2025 - TechStore<br />
        Thank you for shopping with us!
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
