@using Microsoft.AspNetCore.Identity
@using TechStore.Data.Models

<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <li class="nav-item me-3">
            @await Component.InvokeAsync("CartCount")
        </li>

        <li class="nav-item dropdown me-2">
            <a class="nav-link text-light d-flex align-items-center"
               href="#"
               id="profileDropdown"
               role="button"
               data-bs-toggle="dropdown"
               aria-expanded="false"
               title="My profile">
                <i class="bi bi-person-circle fs-5"></i>
            </a>

            <ul class="dropdown-menu dropdown-menu-end"
                aria-labelledby="profileDropdown">

                <li class="dropdown-header text-muted small">
                    Signed in as<br />
                    <strong>@User.Identity?.Name</strong>
                </li>

                <li><hr class="dropdown-divider" /></li>

                <li>
                    <a class="dropdown-item"
                       asp-area="Account"
                       asp-controller="Account"
                       asp-action="MyOrders">
                        <i class="bi bi-receipt me-2"></i>
                        My orders
                    </a>
                </li>

                <li>
                    <a class="dropdown-item"
                       asp-area="Account"
                       asp-controller="Account"
                       asp-action="MyReviews">
                        <i class="bi bi-star me-2"></i>
                        My reviews
                    </a>
                </li>

                <li>
                    <a class="dropdown-item"
                       asp-area="Account"
                       asp-controller="Account"
                       asp-action="DeliveryDetails">
                        <i class="bi bi-box-seam me-2"></i>
                        Delivery details
                    </a>
                </li>
            </ul>
        </li>

        <li class="nav-item">
            <form  class="form-inline" 
                asp-area="Identity" 
                asp-page="/Account/Logout" 
                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" 
                asp-area="Identity" 
                asp-page="/Account/Register">Register
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" 
                asp-area="Identity" 
                asp-page="/Account/Login">Login
            </a>
        </li>
}
</ul>
