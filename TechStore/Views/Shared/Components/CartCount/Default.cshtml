@model int

<a class="nav-link text-dark"
   asp-area=""
   asp-controller="Cart"
   asp-action="Index"
   title="My Cart">

    <span class="position-relative d-inline-block">
        <i class="bi bi-cart fs-5"></i>

        @if (Model > 0)
        {
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"> 
                @Model
            </span>
        }
    </span>
</a>
