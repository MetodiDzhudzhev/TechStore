@model TechStore.Web.ViewModels.Payment.PaymentCancelViewModel

@{
    ViewData["Title"] = "Payment cancelled";
}

<div class="container mt-5">
    <div class="card p-4 shadow-lg bg-white text-dark">
        <h2 class="text-danger mb-3">Payment cancelled</h2>

        <p class="fs-5">
            Your payment was not completed. No charges were made.
        </p>

        <p>
            <strong>Order #:</strong> @Model.OrderId
        </p>

        <div class="d-flex gap-2">
            <a asp-controller="Payment"
               asp-action="Payment"
               asp-route-id="@Model.OrderId"
               class="btn btn-outline-dark">
                Back to order
            </a>

            <a asp-controller="Home"
               asp-action="Index"
               class="btn btn-primary">
                Back to Home
            </a>
        </div>
    </div>
</div>
