@using TechStore.Web.ViewModels.Review;
@model ReviewsPanelViewModel

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mb-3">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mb-3">
        @TempData["SuccessMessage"]
    </div>
}


<div data-total-count="@Model.TotalCount"
     data-average-rating="@Model.AverageRating"
     style="display:none"></div>

<div class="mb-3 d-flex justify-content-between align-items-center">
</div>

@if (User.Identity?.IsAuthenticated == true && Model.CanAddReview)
{
    <div class="border rounded p-3 mb-3 bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <strong>Add review</strong>
        </div>

        @await Html.PartialAsync(
        "~/Views/Review/AddReviewFormInline.cshtml",
        new TechStore.Web.ViewModels.Review.ReviewFormInputModel { ProductId = Model.ProductId }
        )
    </div>
}
else if (User.Identity?.IsAuthenticated != true)
{
    <div class="alert alert-secondary mb-3">
        <a asp-area="Identity" asp-page="/Account/Login">Login</a> to add a review.
    </div>
}

@if (!Model.Items.Any())
{
    <p class="text-muted mb-0">No reviews yet.</p>
}
else
{
    foreach (var review in Model.Items)
    {
        <div class="border rounded p-3 mb-2">
            <div class="d-flex justify-content-between">
                <strong>@review.UserName</strong>
                <small class="text-muted">@review.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy")</small>
            </div>

            <div class="mb-1">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= review.Rating)
                    {
                        <span class="text-warning">★</span>
                    }
                    else
                    {
                        <span class="text-muted">☆</span>
                    }
                }
            </div>

            @if (!string.IsNullOrWhiteSpace(review.Comment))
            {
                <p class="mb-0">@review.Comment</p>
            }
        </div>
    }

    <nav class="mt-3">
        <ul class="pagination pagination-sm justify-content-center mb-0">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link js-reviews-page" href="#"
                   data-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>

            @for (int p = 1; p <= Model.TotalPages; p++)
            {
                <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                    <a class="page-link js-reviews-page" href="#" data-page="@p">@p</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link js-reviews-page" href="#"
                   data-page="@(Model.CurrentPage + 1)">Next</a>
            </li>

        </ul>
    </nav>
}
